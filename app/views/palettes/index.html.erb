<h2>All Artists</h2>
<% @artists.each do |artist| %>
  <ul>
    <li><%= image_tag(artist.image, :class => 'thumb') %></li>
    <li><%= link_to(artist.name, artist) %></li>
    <li><%= artist.nationality %></li>
    <li><%= artist.dob.strftime '%A %e %B, %Y' if artist.dob %></li>
    <li><%= artist.period %></li>
  </ul>
<% end %>




<h2>Users current Color Palettes:</h2>



<%= @Palettes.each do |palette| %>
  <ul>
    <div class="swatch_name"><li><%= @palette.name %></li></div>

    <div class="swatch_style"><li><%= @palette.style %></li></div>

    <div class="swatch_description"><li><%= @palette.description %></li></div>
  </ul>

  <div class="colorbox">

    <div class="swatch" style="background-color: <%= @palette.color1 %>">
    <%= @palette.color1.upcase %></div>

    <div class="swatch" style="background-color: <%= @palette.color2 %>">
    <%= @palette.color2.upcase %></div>

    <div class="swatch" style="background-color: <%= @palette.color3 %>">
    <%= @palette.color3.upcase %></div>

    <div class="swatch" style="background-color: <%= @palette.color4 %>">
    <%= @palette.color4.upcase %></div>

    <div class="swatch" style="background-color: <%= @palette.color5 %>">
    <%= @palette.color5.upcase %></div>

  </div>
<% end %>




