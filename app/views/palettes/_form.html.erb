<%= form_for @palette do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :style %>
    <%= f.text_field :style %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <div class="swatch" style="background-color: <%= @palette.color1 %>">
    <span><%= @palette.color1.upcase if @palette.color1 %></span>
    <%= f.hidden_field :color1 %>
  </div>

  <div class="swatch" style="background-color: <%= @palette.color2 %>">
    <span><%= @palette.color2.upcase if @palette.color2 %></span>
    <%= f.hidden_field :color2 %>
  </div>

  <div class="swatch" style="background-color: <%= @palette.color3 %>">
    <span><%= @palette.color3.upcase if @palette.color3 %></span>
    <%= f.hidden_field :color3 %>
  </div>

  <div class="swatch" style="background-color: <%= @palette.color4 %>">
    <span><%= @palette.color4.upcase if @palette.color4 %></span>
    <%= f.hidden_field :color4 %>
  </div>

  <div class="swatch" style="background-color: <%= @palette.color5 %>">
    <span><%= @palette.color5.upcase if @palette.color5 %></span>
    <%= f.hidden_field :color5 %>
  </div>

  <p> <%= f.submit %></p>

<% end %>
