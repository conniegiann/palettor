<%= form_for(@user, class: "form-signin")do |f| %>

  <p>
    <%= f.label :email, class: "sr-only" %>
    <%= f.text_field :email, class: "form-control", placeholder: "email address", :autofocus => true %>
  </p>

  <p>
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, class: "form-control", placeholder: "name" %>
  </p>

  <p>
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control", placeholder: "password" %>
  </p>

  <p>
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "password" %>
  </p>

  <%= submit_tag 'Sign up', class: "btn btn-lg btn-primary btn-block" %>

<% end %>